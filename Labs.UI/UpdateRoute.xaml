<Window x:Class="Labs.UI.UpdateRoute"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labs.UI"
        mc:Ignorable="d"
        Title="Update route window" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Margin="0 10 0 0">Route number</TextBlock>
            <TextBox Name="RouteNumberBox" Width="300" Margin="0 5 0 0"/>

            <TextBlock Margin="0 40 0 0">Departure destination</TextBlock>
            <ComboBox Name="DepartureDestinationList" Width="300" Margin="0 5 0 0"/>

            <TextBlock Margin="0 40 0 0">Arrival destination</TextBlock>
            <ComboBox Name="ArrivalDestinationList" Width="300" Margin="0 5 0 0"/>

            <Button Margin="0 60 0 0" Click="UpdateRouteClick">
                Update route
            </Button>
        </StackPanel>
    </Grid>
</Window>
